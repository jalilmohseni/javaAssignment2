<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.feemaintenanceapplication.FeeFormController">

   <children>
      <VBox layoutX="50.0" layoutY="50.0" prefHeight="300.0" prefWidth="300.0" spacing="10">
         <children>
            <Label text="Fee ID" />
            <TextField fx:id="txtFeeID" />

            <Label text="Fee Name:" />
            <TextField fx:id="txtFeeName" />

            <Label text="Fee Amount:" />
            <TextField fx:id="txtFeeAmount" />

            <Label text="Description:" />
            <TextArea fx:id="txtFeeDesc" prefRowCount="3" wrapText="true" />

            <!-- HBox for Buttons -->
            <HBox alignment="CENTER" spacing="20">
               <Button fx:id="btnSave" text="Save">
                  <font>
                     <Font name="System Bold" size="14.0" />
                  </font>
                  <HBox.margin>
                     <Insets left="20.0" right="20.0" />
                  </HBox.margin></Button>
               <Button fx:id="btnCancel" text="Cancel">
                  <font>
                     <Font name="System Bold" size="14.0" />
                  </font>
                  <HBox.margin>
                     <Insets left="20.0" right="20.0" />
                  </HBox.margin></Button>
            </HBox>
         </children>
      </VBox>
      <Label layoutX="99.0" layoutY="21.0" text="Fee Maintenance Form">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
